<h3> Edit Word </h3>


<form action="" class="row">

<div class="input-field">
  <label for="">Word</label>
  <input type="text" name="word" value="{{word}}" id="word">
</div>


  <label for=""> Available</label>
  <select name="available" id="available">
    {{{selectAvailableOption available}}}
  </select>


<div class="input-field">
  <label for="">Definition</label>
  <input type="text" name="definition" id="definition">
</div>
 
<div class="input-field">
  <label for="">Type (Noun, Verb, Adjective)</label>
  <input type="text" name="type" id="type">
</div>
 

<div class="input-field">
  <input type="text" name="example1" class="example" placeholder="Example 1">
  <input type="text" name="example2" class="example" placeholder="Example 2 (Optional)">
  <input type="text" name="example3" class="example" placeholder="Example 3 (Optional)">
</div>


  <button id="addWord" class="btn"> Add Word </button>  
  <button id="updateWord" class="btn"> Finish </button>
</form>


